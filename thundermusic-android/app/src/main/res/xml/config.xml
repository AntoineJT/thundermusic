<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.litarvan.thundermusic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="Thundermusic">
        <param name="android-package" value="fr.litarvan.thundermusic.core.Thundermusic" />
    </feature>
    <name>Thundermusic</name>
    <description>
        All your music on a modern player
    </description>
    <author email="adrien1975@live.fr" href="https://github.com/Litarvan">
        Adrien 'Litarvan' Navratil
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
